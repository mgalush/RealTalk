    <div class="content">
        <% if (back) { %>
        <div class="navButton">
            <a href="<%= back %>">
                <i class="fas fa-arrow-circle-left"></i>
            </a>
        </div>
        <% } %>

        <div class="topicContainer">
            <h3 class="topic"><%= topic.topic %></h3>
        </div>
        <div class="navButton">
            <a href="<%= next %>">
                <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div>

